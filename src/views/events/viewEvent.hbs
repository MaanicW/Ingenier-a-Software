<div class="header-actividad">
    <div class="titulo">
        <h2>
            <b>Consulta Evento</b>
        </h2>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <card class="card-header">
            <div class="card-cabezera">
                <div class="card-titulo">
                    <h5 class="card-title">

                    </h5>
                </div>
                <div class="card-preguntas">
                    <button class="btn btn-info rounded-circle" data-toggle="modal" data-target="#questions">
                        <i class="fas fa-question"></i>
                    </button>
                    <!-- Inicio Modal -->
                    <div class="modal fade" id="questions" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="staticBackdropLabel">Preguntas</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">

                                </div>
                                <div class="modal-footer">
                                    <div class="row justify-content-end no-gutters">
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-danger px-4" data-dismiss="modal">
                                                Salir
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Fin Modal -->
                </div>
            </div>
        </card>
        <div class="card-body">
            <div class="d-flex">
                <div class="contenedor-imagen">
                    <div class="mb-3">
                        <img src="../../img/profile.jpeg" class="img-thumbnail" width="250" height="200" alt=" ">
                    </div>
                </div>
                <div class="contenedor-fecha">
                    <div class="mb-3">
                        <label for="fechaIni" class="form-label">Fecha de Inicio:</label>
                        <input type="text" class="form-control" name="fechaIni" disabled>
                    </div>
                </div>
                <div class="contenedor-fecha">
                    <div class="mb-3">
                        <label for="fechaFin" class="form-label">Fecha de Finalización:</label>
                        <input type="text" class="form-control" name="fechaFin" disabled>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="estado" class="form-label">Estado:</label>
                <input type="text" class="form-control" name="estado" disabled>
            </div>
            <div class="mb-1">
                <label for="fechaReportes" class="form-label">Fechas de entrega de reportes</label>
            </div>
            <div class="d-flex">
                <div class="reportesFecha">
                    <div class="mb-3">
                        <label for="fecha_ini_reporte" class="form-label">Fecha de Reporte de inicio:</label>
                        <input type="text" class="form-control" name="fecha_ini_reporte" disabled>
                    </div>
                </div>
                <div class="reportesFecha">
                    <div class="mb-3">
                        <label for="fecha_fin_reporte" class="form-label">Fecha de Reporte de finalización:</label>
                        <input type="text" class="form-control" name="fecha_fin_reporte" disabled>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción:</label>
                <textarea name="descripcion" rows="5" class="form-control textarea" disabled></textarea>
            </div>
            <div class="mb-3">
                <label for="carrera" class="form-label">Carreras participantes:</label>
                <input type="text" class="form-control" name="carrera" disabled>
            </div>
            <div class="mb-3">
                <label for="semestre" class="form-label">Semestres participantes:</label>
                <input type="text" class="form-control" name="semestre" disabled>
            </div>
            <div class="mb-3">
                <label for="file" class="form-label">Archivos Adjuntos:</label>
                <a href="#" class="btn btn-danger" download=" ">
                    <i class="fas fa-file-pdf fa-5x"></i>
                </a>
            </div>
        </div>
        <div class="card-footer">
            <div class="contenedor-back">
                <a href="#" class="btn btn-danger">
                    Regresar
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>
</div>